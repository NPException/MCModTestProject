(ns nplisp.core

  (defmacro declare
    [name]
    (def name))

  (defmacro defn
    [name & fn-declaration]
    (list 'def name
      (apply list 'fn name fn-declaration)))


  (defn eval
    [form]
    (let [ns (current-ns)]
      (eval-in-ns ns form)))


  ;; LOGIC FUNCTIONS AND MACROS

  (defn not [x]
    (if x false true))


  (defmacro and
    ([] true)
    ([x] x)
    ([x & next]
     (list 'if x
       (cons 'and next)
       x)))


  (defmacro or
    ([] nil)
    ([x] x)
    ([x & next]
     (list 'if x
       x
       (cons 'or next))))


  ;; CONDITIONALS

  (defmacro if-not
    ([test then]
     (list 'if test nil then))
    ([test then else]
     (list 'if test else then)))


  (defmacro when
    [test & body]
    (list 'if test (cons 'do body)))


  (defmacro when-not
    [test & body]
    (list 'if test nil (cons 'do body)))


  (defmacro cond
    [& clauses]
    (if clauses
      (list 'if (first clauses)
        (first (next clauses))
        (cons 'cond (next (next clauses))))))


  ;; DATA STRUCTURE MANIPULATION

  (defn concat
    ([] '())
    ([x] x)
    ([x y]
     (let [s (seq x)]
       (if s
         (cons (first s) (concat (rest s) y))
         (seq y))))))
